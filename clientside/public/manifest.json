{
    "name": "Tab Manager",
    "description": "manage all your tabs in one go",
    "version" : "1.0.0",
    "manifest_version": 3,
    "action":{
      "default_title": "Tab Manger",
      "default_popup": "index.html",
      "default_icon": "browser (1).png"
    },
    "background": {
      "service_worker": "./background.js",
      "persistent": false
    },
    "commands": {
      "pinTab": {
        "suggested_key": {
          "default": "Ctrl+Y"
        },
        "description": "Pin the active tab"
      },
      "unpinTab": {
        "suggested_key": {
          "default": "Ctrl+Q"
        },
        "description": "UnPin the active tab"
      },
      "_execute_action": {
        "suggested_key": {
            "default": "Ctrl+Shift+E"
        }
    }
    },
    "permissions": [
      "activeTab",
        "storage",
        "tabs",
        "tabGroups",
        "sessions",
        "http://localhost:2000/"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>","https://*/*", "http://*/*"],
        "js": ["content.js"]
      }
    ]
  }
